<section class="content-header">
   <h1>
      Admins
      <small>Equipe</small>
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">
               <h3 class="box-title">Gerenciamento de Administradores</h3>
            </div>
            <div class="box-header with-border">
               <%= link_to "Cadastar Novo Admin", new_crew_admin_path, class:"btn btn-info" %>
               <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
             <table id="table_ecej" class="table table-striped table-bordered dt-responsive nowrap display"  cellspacing="0" width="100%">
                  <thead>
                     <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th class="noExport">Editar</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% if !@admins.nil? %>
                     <% @admins.each do |admin| %>
                     <tr>
                        <td><%= admin.name %></td>
                        <td><%= admin.email %></td>
                        <td>
                           <%= link_to edit_crew_admin_path(admin) do %>
                           <small class="btn btn-default dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Editar
                           </small>
                           <% end %>
                           <%= link_to crew_admin_path(admin), method: :delete, data: { confirm: "Deseja realmente apagar o administrador #{admin.name}" } do %>
                           <small class="btn btn-danger dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Excluir
                           </small>
                           <% end %>
                        </td>
                     </tr>
                     <% end %>
                     <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>
