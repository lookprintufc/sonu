<!-- Main content -->
<section class="content">
    <!-- <section class="box"> -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciamento de Comitês</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="table_ecej" class="table table-striped table-bordered dt-responsive nowrap display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Data Início</th>
                                <th class="">Data Final</th>
                                <th class="">Preço</th>
                                <th class="">Preço por Cotas</th>
                                <th>Grade</th>
                                <th>Limite</th>
                            </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <% j=1 %>
                            <% @comitees.each do |comitee| %>
                              <td>
                                <%=comitee.name%>
                              </td>
                              <td>
                                <%=comitee.start_date%>
                              </td>
                              <td>
                                <%=comitee.end_date%>
                              </td>
                              <td>
                                <%=comitee.value_not_cotist%>
                              </td>
                              <td>
                                <%=comitee.value_cotist%>
                              </td>
                              <td>
                                <%=comitee.grade%>
                              </td>
                              <td>
                                <%=comitee.limit%>
                              </td>

                              </tr>
                              <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- </section> -->
    </section>
