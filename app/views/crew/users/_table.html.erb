<div class="row">
   <div class="col-sm-12">
      <div class="card-box table-responsive">
         <h4 class="header-title m-t-0 m-b-30">Gerenciamento de Usuários</h4>
         <table id="datatable-buttons" class="table table-striped table-bordered">
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Inscrito</th>
                  <th >Cotista</th>
                  <th>Data de Inscr.</th>
                  <th class="noExport"></th>
                  <th class="noExport"></th>
                  <th class="noExport"></th>
               </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
               <tr>
                  <td><%= user.name.nil? ? 'Não Informado' : user.name.titleize%></td>
                  <td><%= user.email%></td>
                  <td><%= user.comitee.nil? ? 'Não cadastrado' : user.comitee.name %></td>
                  <td><%= user.type_user%></td>
                  <td><%= user.created_at.strftime("%d/%m/%Y  %H:%M:%S") %></td>
                  <td>
                     <%= link_to edit_crew_user_path(user) do %>
                     <button type="button" class="btn btn-block btn-sm">Editar</button>
                     <% end %>
                     <%#= link_to users, method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <a href="">
                     <!-- <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span> -->
                     <%# end %>
                  </td>
                  <td>
                     <%= link_to crew_user_path(user), target: "_blank", method: :get do %>
                     <button type="button" class="btn btn-block btn-warning btn-sm">Ver</button>
                     <% end %>
                  </td>
                  <td>
                     <%= link_to crew_user_path(user), target: "_blank", method: :patch do %>
                     <button type="button" class="btn btn-block btn-danger btn-sm">Deletar</button>
                     <% end %>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
   <!-- end col -->
</div>
<!-- end row -->